[
    {
        "CreateComponents": {
            "path": ["Blocks", "Speech"],
            "components":
            [
                {
                    "type": "Position",
                    "name": "position"
                },
                {
                    "type": "Float",
                    "name": "box_scale",
                    "parameters": 3.0
                },
                {
                    "type": "Float",
                    "name": "text_scale",
                    "parameters": 1.0
                },
                {
                    "type": "Float",
                    "name": "width",
                    "parameters": 112
                },
                {
                    "type": "Float",
                    "name": "height",
                    "parameters": 80
                },
                {
                    "type": "Block::Box",
                    "name": "block-box",
                    "parameters": {
                        "box": ["Textbox", "Speech_Bubble", "box"],
                        "scale": ["Blocks", "Speech", "box_scale"]
                    }
                },
                {
                    "type": "Block::Text",
                    "name": "block-text",
                    "parameters": {
                        "scale": ["Blocks", "Speech", "text_scale"],
                        "offset": {"x": 64, "y": 42},
                        "font": ["Font", "Gilsans_PWO2"]
                    }
                }
            ]
        }
    },
    {
        "DelayNext" : [
            {
                "CreateComponents": {
                    "path": ["Blocks", "Speech", "Render"],
                    "components": [
                        {
                            "type": "System::CameraBlockDraw",
                            "name": "system-camera_block_draw",
                            "parameters": {
                                "position": ["Blocks", "Speech", "position"],
                                "camera": ["Camera", "position"],
                                "blocks": [ ["Blocks", "Speech", "block-box"],  ["Blocks", "Speech", "block-text"]]
                            }
                        }
                    ]
                }
            },
            {
                "CreateComponents": {
                    "path": ["Blocks", "Speech", "Update"],
                    "components": {
                        "type": "Navigate::Message",
                        "name": "navigate",
                        "parameters" : {
                            "controller": ["Controller", "controller"]
                        }
                    }
                }
            }
        ]
    }
]