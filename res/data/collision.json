[
    {
        "CreateComponents": {
            "path": ["Collision", "QuadTree"],
            "components" : [
                {
                    "type": "QuadTree",
                    "name": "root",
                    "parameters" : {
                        "path": ["Collision", "QuadTree"],
                        "max_objects" : 32,
                        "max_trees" : 256
                    }
                },
                {
                    "type": "ColliderMask",
                    "name": "mask",
                    "parameters":{
                        "ids": [
                            "warp_space",
                            "actionable",
                            "attack",
                            "player",
                            "physical",
                            "inactive"
                        ],
                        "collide_map": {
                            "physical": ["physical"],
                            "player": ["physical", "warp_space"],
                            "actionable": ["actionable"],
                            "attack": ["physical"]
                        }
                    }
                }
            ]
        }
    },
    {
        "CreateComponents": {
            "path" : ["Collision", "Update"],
            "components": {
                "type": "System::ClearQuadtree",
                "name": "clear_tree",
                "parameters": {
                    "quadtree": ["Collision", "QuadTree", "root"]
                }
            }
        }
    }
]